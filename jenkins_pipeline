pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Example: Maven build
                sh '/opt/maven/bin/mvn package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (adjust according to your testing framework)
                sh '/opt/maven/bin/mvn test'
            }
        }

        stage('Deploy to Tomcat') {
            environment {
                TOMCAT_URL = 'http://3.84.55.193:8080/'
                WAR_FILE = "target/WebAppCal-0.0.6.war"
            }
            steps {
                script {
                    // Deploy to Tomcat using curl
                    sh "curl -T ${WAR_FILE} ${TOMCAT_URL}/manager/text/deploy?path=/your-application&update=true"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Deployment complete.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
