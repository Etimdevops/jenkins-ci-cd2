pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Example: Maven build
                sh '/opt/maven/bin/mvn package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (adjust according to your testing framework)
                sh 'mvn test'
                stash(name: 'jenkins-ci-cd', includes: 'target/*.war')
            }
        }
        
        stage('Deploy') {
            steps {
                unstash 'jenkins-ci-cd'
                sh "echo admin123 | sudo -S mv target/WebAppCal-0.0.6.war ~/apache*/webapps/"

            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Deployment complete.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
