pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Example: Maven build
                sh '/opt/maven/bin/mvn package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (adjust according to your testing framework)
                sh 'mvn test'
                stash(name: 'jenkins-ci-cd', includes: 'target/*.war')
            }
        }
        
        stage('Deploy') {
            steps {
                unstash 'jenkins-ci-cd'
                script {
                    def remoteDir = "~/apache-tomcat-7.0.94/webapps"
                    def warFile = "target/WebAppCal-0.0.6.war"
                    
                    sshagent(credentials: ['jenkinsmaster']) {
                        // Use SCP to copy WAR file to remote server
                        sh "scp -o StrictHostKeyChecking=no ${warFile} ec2-user@172.31.87.140:${remoteDir}"
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Deployment complete.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
