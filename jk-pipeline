pipeline {
    agent any
    
    environment {
        REMOTE_SERVER = '172.31.87.140'
        REMOTE_USERNAME = 'ec2-user'
    }
    
    stages {
        stage('Build') {
            steps {
                // Example: Maven build
                sh '/opt/maven/bin/mvn package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (adjust according to your testing framework)
                sh 'mvn test'
                stash(name: 'jenkins-ci-cd', includes: 'target/*.war')
            }
        }
        
        stage('Deploy') {
            steps {
                unstash 'jenkins-ci-cd'
                script {
                    def remoteDir = "~/apache-tomcat-7.0.94/webapps"
                    def warFile = "target/WebAppCal-0.0.6.war"
                    
                    withCredentials([usernamePassword(credentialsId: 'jenkinsmaster', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh "scp -o StrictHostKeyChecking=no ${warFile} ${USERNAME}@${REMOTE_SERVER}:${remoteDir}"
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Deployment complete.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
