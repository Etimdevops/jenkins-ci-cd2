pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                script {
                    // Example: Maven build
                    sh '/opt/maven/bin/mvn package'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    // Example: Run tests (adjust according to your testing framework)
                    sh '/opt/maven/bin/mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                script {
                    // Example: Copy artifact to remote server
                    sh 'sudo scp /var/lib/jenkins/workspace/pipeline_job/target/WebAppCal-0.0.6.war ec2-user@172.31.87.140:~/apache-tomcat-7.0.94/webapps/'
                }
            }
            post {
                success {
                    echo 'Pipeline succeeded! Deployment complete.'
                }
                failure {
                    echo 'Pipeline failed.'
                }
            }
        }
    }
}
