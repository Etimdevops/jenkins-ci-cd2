pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Example: Maven build
                sh '/opt/maven/bin/mvn package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (adjust according to your testing framework)
                sh '/opt/maven/bin/mvn test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Deploying artifacts (adjust based on your deployment method)
                sh 'sudo rm -rf ~/apache-tomcat-7.0.94/webapp*.war'
                sh 'sudo mv target/*.war ~/apache-tomcat-7.0.94/webapps/'
                sh 'sudo systemctl daemon-reload' 
                sh 'sudo ~/apache-tomcat-7.0.94/bin/shutdown.sh && sudo ~/apache-tomcat-7.0.94/bin/startup.sh'
                // Additional deployment steps can be added as needed
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Deployment complete.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
