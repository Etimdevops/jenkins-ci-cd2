pipeline {
    agent any

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-1.8.0-amazon-corretto.x86_64/jre'
        CATALINA_HOME = '/home/ec2-user/apache-tomcat-7.0.94'
    }

    stages {
        stage('Build') {
            steps {
                sh '/opt/maven/bin/mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh '/opt/maven/bin/mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Stop Tomcat (if it's running)
                sh "${CATALINA_HOME}/bin/shutdown.sh || true"

                // Remove old application files
                // sh "rm -rf ${CATALINA_HOME}/webapps/ROOT*"

                // Copy new WAR file to Tomcat webapps directory
                sh "cp target/*.war ${CATALINA_HOME}/webapps/WebAppCal.war"

                // Start Tomcat
                sh "${CATALINA_HOME}/bin/startup.sh"
            }
        }
    }

    post {
        always {
            // Clean up: Stop Tomcat if started during deployment
            sh "${CATALINA_HOME}/bin/shutdown.sh || true"
        }
    }
}
